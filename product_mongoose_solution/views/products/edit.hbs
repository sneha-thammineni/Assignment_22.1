<main>

	<h2>EDIT THIS PRODUCT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="product-container-show">
		<form action="/{{product._id}}?_method=PUT" method="POST">
			<strong>Name:</strong><br>
				<input type="text" name="name" value="{{product.name}}"><br><br>
			<strong>Description:</strong><br>
				<!-- <input type="text" name="description" value="<%= product.description %>"><br><br> -->
				<textarea name="description" rows="8" cols="40" value="{{product.description}}">{{product.description}}</textarea><br/><br>
			<strong>Image URL:</strong><br>
				<input type="text" name="img" value="{{product.img}}")><br><br>
			<strong>Price:</strong><br>
				<input type="text" name="price" value="{{product.price}}"><br><br>
			<strong>Quantity:</strong><br>
				<input type="text" name="qty" value="{{product.qty}}"><br><br>
			<button>SUBMIT</button>
		</form>

		<div id="img-preview">
			<img src="{{product.img}}">
		</div>

	</div>
</main>
</body>
</html>
